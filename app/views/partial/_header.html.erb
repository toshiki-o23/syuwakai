                          <%= f.label :開催日時 %>
                          <%= f.datetime_field :start_time_gteq, class: "form-control" %>
                      </div>

                        <%= f.submit "search", class: "material-icons-outlined md-36 btn" %>

                    </div>
                  <% end %>
                </form>
              </div>
            </div>
          </div>
        </div>
        
      </ul>
