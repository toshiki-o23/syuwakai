            <li class="nav-item active">
              <%= link_to 'manage_accounts', edit_user_registration_path, class: 'nav-link material-icons-outlined md-36' %>
            </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to 'event', event_user_events_path(current_user.id), class: 'nav-link material-icons-outlined md-36' %>
          </li>
          <li class="nav-item active">
            <%= link_to 'logout', destroy_user_session_path, class: 'nav-link material-icons-outlined md-36' %>
          </li>
      <% else %>
