    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
              <%= link_to 'post_add', new_event_path, class: "nav-link material-icons-outlined md-36 nonelink" %>
          </li>
          <li class="nav-item active">
              <%= link_to 'bookmark_added', user_bookmarks_path(current_user), class: "nav-link material-icons-outlined md-36" %>
          </li>
          <li class="nav-item active">
              <%= link_to 'notifications', notifications_path, class: "nav-link material-icons-outlined md-36" %>
          </li>
          <li class="nav-item active">
              <%= link_to 'chat', rooms_path, class: "nav-link material-icons-outlined md-36" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'person', mypage_path, class: 'nav-link material-icons-outlined md-36' %>
          </li>
