<% if user_signed_in? && current_user != event.user_id %>
  <% if event.already_bookmarked?(current_user) %>
    <%= link_to 'cancel bookmark', event_bookmarks_path(event), method: :delete %>
  <% else %>
    <%= link_to 'bookmark', event_bookmarks_path(event), method: :post %>
  <% end %>
<% end %>
