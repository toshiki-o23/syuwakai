<% if user_signed_in? && current_user.id != event.user_id %>
  <% if event.already_bookmarked?(current_user) %>
    <%= button_to 'ブックマーク解除', event_bookmarks_path(event),  class: "btn btn-info card-link", method: :delete %>
  <% else %>
    <%= button_to 'ブックマーク追加', event_bookmarks_path(event), class: "btn btn-info card-link", method: :post %>
  <% end %>
<% end %>
