<% if @messages.present? %>
  <% @messages.each do |m| %>
    <div class="px-2 py-1">
      <!-- media -->
      <div class="w-lg-40 mb-4">
        <%= link_to user_path(m.user_id)  do %>
          <%= image_tag m.user.image.url, class: "rounded-circle avatar-md" %>
        <!-- media body -->
          <span class="ml-3">
            <small><%= m.user.name %> , <%= l m.created_at, format: :short%></small>
            <div class="d-flex">
              <div class="card mt-2 rounded-top-left-0">
                <div class="card-body p-3">
                  <p class="mb-0 text-dark">
                    <%= safe_join(m.content.split("\n"),tag(:br)) %>
                  </p>
                </div>
              </div>
            </div>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-primary" role="alert">
    メッセージありません
  </div>
<% end %>
