<%= javascript_pack_tag 'events' %>

<% if @event.errors.any? %>
  <%= @event.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @event, url: '/events', method: :post, local: true do |f| %>

    <div class="form-group p-3">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group p-3">
        <%= f.label :内容 %>
        <%= f.text_area  :content, class: "form-control", rows: "3" %>
    </div>

    <div class="form-group p-3">
        <%= f.label :画像 %>
        <%= f.file_field :image, accept: 'image/jpeg, image/gif, image/png', id: "image-select-btn" %>
    </div>

    <div class="event-image-prev">
      <% if @event.image? %>
        <%= image_tag @event.image.url, alt: "event-image", id: "img_prev", class: "event-image" %>
      <% else %>
        <%= image_tag "default_event.jpg", alt: "event-image", id: :img_prev, class: "event-image" %>
      <% end %>
    </div>

    <div class="form-group p-3">
      <%= f.submit "新規投稿", class: "btn btn-primary" %>
    </div>
<% end %>
