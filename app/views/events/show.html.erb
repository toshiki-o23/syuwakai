<%= link_to @event.user.name, user_path(@event.user_id) %>

<%= @event.title %>
<%= @event.content %>
<% if @event.image.url.present? %>
  <%= image_tag @event.image.url %>
<% end %>

<% if user_signed_in? && current_user.id == @event.user_id %>
  <%= link_to 'イベント投稿編集', edit_event_path(@event), class: "btn btn-primary" %>
<% end %>
<%= render 'partial/bookmark', event: @event %>
