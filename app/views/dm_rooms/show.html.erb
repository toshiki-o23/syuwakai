<% @entries.each do |entry| %>
  <h5><%= link_to "#{ entry.user.name } さん", user_path(entry.user.id), class: "nonelink text-dark" %></h5>
<% end %>

<hr>

<%= render 'partial/room_show' %>

<%= form_for @message do |f| %>
  <div class="form-group">
  <%= f.text_field :content, placeholder: "入力して下さい", class: "form-control" %>
  <%= f.hidden_field  :dm_room_id, :value => @room.id %>
  </div>
  <%= f.submit "send", class: "material-icons-outlined md-36 nonelink btn" %>
<% end %>
