<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
  <% if @bookmark_events.present? %>
    ブックマーク一覧
    <% @bookmark_events.each do |bookmark_event| %>
      <%= bookmark_event.title %>
    <% end %>
  <% else %>
    ブックマークありません
  <% end %>
<% else %>
  <h1>ユーザーページ</h1>
<% end %>


<%= render 'relationships/follow_button', user: @user %>

<h3>メールアドレス</h3>
<%= @user.email %>
<%# もしユーザー画像が登録されているなら表示 %>
<% if @user.image.url.present? %>
  <%= image_tag @user.image.url %>
<% end %>

<% @events.each do |event| %>
  <%= event.title %>
  <%= event.content %>
<% end %>
