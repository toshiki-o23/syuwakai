<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to @user.name, user_path(@user), class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to  "フォロー #{@user.followings.count}" , user_following_path(@user.id), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロワー #{@user.followers.count}", user_follower_path(@user.id), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= render 'relationships/follow_button', user: @user %>
  </li>
</ul>

<%= @user.introduce %>

<% if @user.image.url.present? %>
  <%= image_tag @user.image.url %>
<% end %>

<div class="container">
  <% @events.each do |event| %>
    <div class="card-body row row-cols-2 border rounded-pill">
      <h5 class="card-title col">
        <%= event.title %>
      </h5>
      <p class="card-text col">
        <%= event.content %>
      </p>
      <%= link_to 'show', event_path(event), class: "btn btn-primary ml-auto btn-sm rounded-pill" %>
    </div>
  <% end %>
</div>
