<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to @user.name, user_path(@user), class: "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to  "フォロー #{@user.followings.count}" , user_following_path(@user.id), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= link_to "フォロワー #{@user.followers.count}", user_follower_path(@user.id), class: "nav-link" %>
  </li>
  <li class="nav-item">
    <%= render 'relationships/follow_button', user: @user, class: "nav-link" %>
  </li>
  <li class="nav-item">
    <% if user_signed_in? %>  
      <% unless @user.id == current_user.id %>
        <% if @is_room == true %>
          <a href="/dm_rooms/<%= @room_id %>" class="btn btn-outline-primary">DM</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.submit "email", class:""%>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </li>
</ul>

<div class="row">
  <div class="col-sm">
    <% if @user.image.url %>
      <%= image_tag @user.image.url , class: "rounded-circle", width: "100", height: "100" %>    
    <% end %>
  </div>
  <div class="col-sm">
    <%= @user.introduce %>
  </div>
</div>


<%= render 'partial/events_index', events: @events %>
