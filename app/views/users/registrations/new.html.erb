<%= form_for resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>

  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="field col form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field col form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :introduce %><br />
    <%= f.text_area :introduce, autofocus: true, autocomplete: "introduce", class: "form-control" %>
  </div>

  <div class="field form-group custom-file">
    <%= f.label :image, class: "custom-file-label", for: "customFile" %><br />
    <%= f.file_field :image, autofocus: true, autocomplete: "image", class: "form-control-file custom-file-input", id: "customFile" %>
  </div>

  <div class="row ">
    <div class="field col form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field col form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions col form-group">
      <br />
      <%= f.submit "新規登録", class: "btn btn-info" %>
    </div>
  </div>

<% end %>
